<%= simple_form_for card do |f| %>
    <div class="form-group">
      <%= f.input :original_text, as: :text, label: 'Оригинал',
                  input_html: {class: 'form-control', required: true,
                               autofocus: true} %>
    </div>

    <div class="form-group">
      <%= f.input :translated_text, as: :text, label: 'Перевод',
                  input_html: {class: 'form-control', required: true} %>
    </div>

    <div class="form-group">
      <%= f.input :image, as: :file, label: 'Изображение' %>
      <%= f.input :image_cache, as: :hidden %>
    </div>

    <!-- TODO INSERT FLICKER PICS-->
    <div class="form-group">
      <%= label_tag :image_remote, 'Изображение Flickr' %>
      <%= text_field_tag :image_remote, nil %>
    </div>
    <div class="form-group">
      <%= check_box_tag :find_flickr, 1, false, onclick: "show_flicker(this)" %>
      <%= label_tag :find_flickr, t(:find_flickr)%>
      <!-- <%=link_to t(:find_flickr), '#' %> -->
      <!--<a href="/posts/2" class="delete_post" data-confirm="Are you sure?" data-method="delete" data-remote="true" rel="nofollow">Destroy</a>-->
    </div>
    <div class="form-group" id="flicker" style="display: none">
        <div class="input-group add-on">
          <input class="form-control" placeholder="wild, city, work" name="srch-term" id="srch-term" type="text">
          <div class="input-group-btn">
            <!-- <label class="btn btn-default" type="submit2"><i class="glyphicon glyphicon-search"></i></label> -->
            <%=
              label_tag(nil, nil, {class: 'btn btn-default', id: 'search_flickr', 'data-url': "#{flickr_path}",
                                   'data-remote': 'true', 'data-method': 'post'})do
                content_tag :i, nil, class: 'glyphicon glyphicon-search'
              end
            %>
          </div>
        </div>
    </div>
    <div class='form-group' id='flickr-cont' style="display: none">
      <div class="container">
        <div class="row" >
          <% 5.times do%>
          <div class="col-xs-2" >
            <a class="thumbnail" name="flickr-pic">
              <img src="125x125.jpg" alt="125x125" onclick="set_image_remote(this)">
            </a>
          </div>
          <% end %>
        </div>
        <div class="row">
          <% 5.times do%>
              <div class="col-xs-2" >
                <a class="thumbnail" name="flickr-pic">
                  <img src="125x125.jpg" alt="125x125" onclick="set_image_remote(this)">
                </a>
              </div>
          <% end %>
        </div>
      </div>
    </div>




    <div class="form-group">
      <%= f.input :block_id, collection: current_user.blocks.all.order('title'),
                  prompt: 'Выберите колоду', label: 'Колоды',
                  input_html: {class: 'form-control', required: true} %>
    </div>

    <% if card.image? %>
        <div class="form-group">
          <%= f.input :remove_image, as: :boolean, label: 'Удалить изображение' %>
          <div class="row">
            <div class="col-xs-6 col-md-4 card_image">
              <p class="thumbnail">
                <%= image_tag card.image_url %>
              </p>
            </div>
          </div>
        </div>
    <% end %>

    <%= f.button :submit, 'Сохранить', class: 'btn btn-default' %>
<% end %>

<%= javascript_tag render(:partial => 'dashboard/cards/form', :formats => [:js] ) %>

